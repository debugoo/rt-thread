# for module compiling
import os
Import('RTT_ROOT')

cwd = str(Dir('#'))
objs = []
list = os.listdir(cwd)

for d in list:
    path = os.path.join(cwd, d)
    print "path=" + path
    if os.path.isfile(os.path.join(path, 'SConscript')):
        objs = objs + SConscript(os.path.join(d, 'SConscript'))

# add private lib
PRIVATE_LIB = os.path.join(RTT_ROOT, 'lib')
objs = objs + SConscript(os.path.join(PRIVATE_LIB, 'SConscript'))

Return('objs')
